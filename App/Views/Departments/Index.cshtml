@model IEnumerable<App.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Departments</h2>
        <a class="btn btn-success" asp-action="Create">Add New Department</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Department Code</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmentCode</td>
                    <td>@item.DepartmentName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DepartmentCode" class="btn btn-sm btn-warning">Edit</a>
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.DepartmentCode">Delete</button>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal-@item.DepartmentCode" tabindex="-1" aria-labelledby="deleteModalLabel-@item.DepartmentCode" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="Delete" asp-route-id="@item.DepartmentCode" method="post">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel-@item.DepartmentCode">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete department <strong>@item.DepartmentName</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>